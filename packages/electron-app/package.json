{
  "name": "metashine",
  "description": "Music meta tag editor",
  "version": "3.0.0-rc.1",
  "private": true,
  "repository": "github:HermanLederer/metashine",
  "author": {
    "name": "Herman Lederer",
    "email": "germans.lederers@gmail.com",
    "url": "https://hermanlederer.github.io/"
  },
  "license": "MIT",
  "keywords": [
    "mp3",
    "id3",
    "metadata",
    "tag",
    "editor",
    "gui",
    "application"
  ],
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "main": "packages/main/dist/index.js",
  "scripts": {
    "dev": "node scripts/dev.js",
    "build": "cross-env MODE=production node scripts/build.js",
    "preview": "electron .",
    "compile": "electron-builder",
    "lint": "eslint . --ext js,ts,svelte",
    "typecheck-main": "tsc --noEmit -p packages/main/tsconfig.json",
    "typecheck-preload": "tsc --noEmit -p packages/preload/tsconfig.json",
    "typecheck-renderer": "svelte-check --tsconfig packages/renderer/tsconfig.json",
    "typecheck": "npm run typecheck-main && npm run typecheck-preload && npm run typecheck-renderer"
  },
  "build": {
    "appId": "eu.hermanlederer.metashine",
    "productName": "Metashine",
    "directories": {
      "buildResources": "buildResources"
    },
    "win": {
      "target": "nsis",
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": true,
      "allowToChangeInstallationDirectory": true
    },
    "linux": {
      "target": [
        {
          "target": "deb"
        },
        {
          "target": "pacman"
        }
      ],
      "icon": "icon.icns",
      "synopsis": "Find, write and format audio meta tags to your liking.",
      "category": "AudioVideo"
    }
  },
  "browserslist": [
    "Chrome 94"
  ],
  "devDependencies": {
    "@sveltejs/vite-plugin-svelte": "1.0.0-next.49",
    "@tsconfig/svelte": "^2.0.1",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.30.4",
    "@typescript-eslint/parser": "^5.30.4",
    "cross-env": "^7.0.3",
    "electron": "15.3.1",
    "electron-builder": "22.13.1",
    "esbuild": "^0.14.48",
    "esbuild-node-externals": "^1.4.1",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-typescript": "^16.2.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-svelte3": "^3.4.1",
    "sass": "^1.53.0",
    "svelte": "^3.48.0",
    "svelte-check": "^2.8.0",
    "svelte-preprocess": "^4.10.7",
    "tslib": "^2.4.0",
    "tsup": "^5.12.9",
    "typescript": "^4.7.4",
    "vite": "^2.9.13"
  },
  "dependencies": {
    "native-addon": "file:../native-addon",
    "electron-updater": "4.6.2",
    "soundcloud.ts": "^0.4.6",
    "spotify-api.js": "^9.2.1"
  }
}
